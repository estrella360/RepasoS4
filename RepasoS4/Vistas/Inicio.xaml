<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepasoS4.Vistas.Inicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de repaso" TextColor="AliceBlue" FontSize="18" HorizontalTextAlignment="Center" />
            <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2020/05/logo-UISRAEL.png" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Text="Usuario" FontSize="28" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtUsuario" FontSize="28" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Contraseña" FontSize="28" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True" FontSize="28" Grid.Row="0" Grid.Column="1"/>
                
            </Grid>
            <Button x:Name="btnIniciar" Text="Iniciar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>