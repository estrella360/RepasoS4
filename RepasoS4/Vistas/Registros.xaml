<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepasoS4.Vistas.Registros">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUsuario" Text="" />
            <Grid>
               <Grid.RowDefinitions/>
                    <RowDefinitions/>
               <Grid.RowDefinitions/>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    
                </Grid.ColumnDefinitions>
                <Label Text="NOMBRE" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtNombre" Placeholder="Nombre" Grid.Row="0" Grid.Column="1" Grid.Column="1"/>
                <Label Text="Precio" Grid.Row="2" Grid.Column="0"/>
                <Entry x:Name="txtCantidad" Placeholder="CANTIDAD" Keyboard="Numeric" Grid.Row="2" Grid.Column="2"/>

            </Grid>

            <Button x:Name="btnCalcular" Text="CALCULAR" Clicked="btnCalcular_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>